{
  "name": "djibtrade-frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\"",
    "dev:public": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\" \"yarn dev:tunnel:frontend\" \"yarn dev:tunnel:backend\"",
    "dev:frontend": "vite --host",
    "dev:backend": "cd ../djibtrade_skeleton && python manage.py runserver",
    "dev:tunnel:frontend": "cd ../ngrok-v3-stable-windows-amd64 && ngrok http 5173 --host-header=localhost:5173",
    "dev:tunnel:backend": "cd ../ngrok-v3-stable-windows-amd64 && ngrok http 8000 --host-header=localhost:8000",
    "build": "vite build",
    "preview": "vite preview",
    "serve:static": "yarn build && vite preview --port 5173 --host"
  },
  "dependencies": {
    "@fontsource/montserrat": "^5.2.7",
    "axios": "^1.6.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "localtunnel": "^2.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "vite": "^5.4.0"
  },
  "resolutions": {
    "esbuild": "^0.25.0"
  }
}
